@{
    Layout = "~/Views/Shared/_TaskLayout.cshtml";
}
@section scripts
    {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-contextmenu/2.7.1/jquery.contextMenu.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-contextmenu/2.7.1/jquery.contextMenu.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-contextmenu/2.7.1/jquery.ui.position.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#example').DataTable({
                "ajax": {
                    url: "TaskManager/ReturnData?projectId=@ViewBag.ProjectId",
                    type: "POST",
                    contentType: "application/json; charset=utf-8",
                    dataSrc: ''
                },
                "columns": [
                    { "data": "id", title: "Id" },
                    { "data": "name", title: "Name" },
                    { "data": "description", title: "Description" },
                    { "data": "taskType", title: "TaskType" },
                    { "data": "priority", title: "Priority" }
                ]
            });
            $.contextMenu({
                selector: 'tr',
                trigger: 'right',
                callback: function (key, options) {
                    var row = table.row(options.$trigger)
                    switch (key) {
                        case 'edit':
                            window.location.href = "/TaskManager/editTask?taskId=" + row.data()["id"];
                            break;
                        case 'delete':
                            myFunction(row.data()["id"]);
                            break;
                        default:
                            break
                    }
                },
                items: {
                    "edit": { name: "Edit", icon: "edit" },
                    "delete": { name: "Delete", icon: "delete" },
                }
            })
        });

        function RemoveUserFromProject(projectId, userId) {
            $.ajax({
                url: "/TaskManager/RemoveUserFromProject?projectId=" + projectId + "&userId=" + userId,
                type: "POST",
                success: function (result) {
                    location.reload();
                }
            });
        }

        function myFunction(taskId) {
            $.ajax({
                url: "/TaskManager/DeleteTask?taskId=" + taskId,
                type: "DELETE",
                success: function (result) {
                    location.reload();
                }
            });
        }
    </script>
}
<a asp-controller="TaskManager" asp-action="CreateTask" asp-route-projectId="@ViewBag.ProjectId" class="btn btn-primary float-end" tabindex="-1" role="button" aria-disabled="true">Create Task</a>
<br>
<br>
<table id="example" class="mt-2 display" style="width:100%">
    
</table>
@if(ViewBag.SelectedProject != null)
{
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form class="bg-white" asp-controller="TaskManager" asp-action="AddUserToProject" asp-route-projectId="@ViewBag.ProjectId" asp-antiforgery="true" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton"
                                data-bs-toggle="dropdown" aria-expanded="true">
                            Checkbox dropdown
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            @foreach (var user in ViewBag.UserNotIn)
                            {
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="@user.Id" value="true" />
                                            <label class="form-check-label">@user.UserName</label>
                                        </div>
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
<div class="container">
    <div class="mb-3">
        <p class="form-label">Users:</p>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Add user to project
        </button>
        <br>
        <div class="row">
            @foreach (var user in ViewBag.SelectedProject.Users)
            {
                <div class="col-4 p-1">
                    <div class="card">
                        <div class="card-body">
                            <p class="h4 card-title">Project name : @user.Item2</p>
                            <button type="button" onclick="RemoveUserFromProject(@ViewBag.ProjectId,@user.Item1)" class="btn btn-primary">Remove user</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
        <form class="bg-white" asp-controller="TaskManager" asp-action="ModifyProjectPost" asp-route-projectId="@ViewBag.ProjectId" asp-antiforgery="true" method="post">
        <div class="mb-1">
            <label class=" form-label">Name</label>
            <input class=" form-control" type="text" name="Name" value="@ViewBag.SelectedProject.Name"><br>
        </div>
        <div class="mb-1">
                <label class=" form-label">Description</label>
                <input class=" form-control" type="text" name="Description" value="@ViewBag.SelectedProject.Description"><br>
        </div>
        <div class="mb-1">
                <label class=" form-label">ProjectState</label>
                <select class="form-select" name="ProjectStateId">
                    @foreach (var state in ViewBag.ProjectStates)
                    {
                        @if (int.Parse(ViewBag.SelectedProject.ProjectStateId.ToString()) == state.Id)
                        {
                            <option value="@state.Id" selected>@state.Name</option>
                        }
                        else
                        {
                            <option value="@state.Id">@state.Name</option>
                        }
                    }
                </select>
            </div> <br>
        <div class="mb-1">
            <label class=" form-label">IsDeleted</label>
                <input class=" form-control" type="text" name="IsDeleted" value="@ViewBag.SelectedProject.IsDeleted.ToString()"><br>
        </div>
        <div class="mb-1">
            <label class=" form-label">ProjectStartDate</label>
            <input class=" form-control" type="text" name="ProjectStartDate" value="@ViewBag.SelectedProject.ProjectStartDate"><br>
        </div>
        <div class="mb-1">
            <label class=" form-label">ProjectEndDate</label>
            <input class=" form-control" type="text" name="ProjectEndDate" value="@ViewBag.SelectedProject.ProjectEndDate"><br>
        </div>
            <button type="submit" class="btn btn-lg btn-success btn-block mt-3">Modify<i class="fas fa-sign-in-alt"></i></button>
    </form>
</div>
}