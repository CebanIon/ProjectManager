        <div class="mb-1">
            <label class=" form-label">Name</label>
            <input class=" form-control writeIfEditClass" type="text" readonly value="@ViewBag.SelectedProject.Name">
            <br>
        </div>
        <div class="mb-1">
            <label class=" form-label">Description</label>
        @Html.TextArea("Description", (string)(@ViewBag.SelectedProject.Description), new { @class = "form-control", rows = "5", @readonly="readonly"})
            <br>
        </div>
        <div class="mb-1">
            <label class=" form-label">ProjectState</label>
            <select class="form-select writeIfEditClass" disabled>
                @foreach (var state in ViewBag.ProjectStates)
                {
                    @if (int.Parse(ViewBag.SelectedProject.ProjectStateId.ToString()) == state.Id)
                    {
                        <option value="@state.Id" selected>@state.Name</option>
                    }
                    else
                    {
                        <option value="@state.Id">@state.Name</option>
                    }
                }
            </select>
            <br>
        </div>
        <div class="mb-1">
            <label class=" form-label">IsDeleted</label>
            <select class="form-select writeIfEditClass" disabled>
                @if (ViewBag.SelectedProject.IsDeleted.ToString() == "True")
                {
                    <option value="true" selected>True</option>
                    <option value="false">False</option>
                }
                else
                {
                    <option value="true">True</option>
                    <option value="false" selected>False</option>
                }
            </select>
            <br>
        </div>
        <div class="mb-1">
            <label class=" form-label">ProjectStartDate</label>
            <input class=" form-control writeIfEditClass" type="text" readonly value="@ViewBag.SelectedProject.ProjectStartDate">
            <br>
        </div>
        <div class="mb-1">
            <label class=" form-label">ProjectEndDate</label>
            <input class=" form-control writeIfEditClass" type="text" readonly value="@ViewBag.SelectedProject.ProjectEndDate">
            <br>
        </div>
</div>