@{
    Layout = "~/Views/Shared/_TaskLayout.cshtml";
}
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form class="bg-white" asp-controller="TaskManager" asp-action="AddUserToTask" asp-route-taskId="@ViewBag.ProjectTaskId" asp-antiforgery="true" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton"
                        data-bs-toggle="dropdown" aria-expanded="true">
                        Checkbox dropdown
                    </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        @foreach (var user in ViewBag.UserNotIn)
                        {
                            <li>
                                <a class="dropdown-item" href="#">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="@user.Id" value="true" />
                                        <label class="form-check-label">@user.UserName</label>
                                    </div>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="container">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
        Add user to task
    </button>
    <div class="mb-3">
        <label class="form-label">Users</label>
        <div class="row">
            @foreach (var user in ViewBag.ProjectTask.Users)
            {
                <div class="col-4 p-1">
                    <div class="card">
                        <div class="card-body">
                            <p class="h4 card-title">Project name : @user.Item2</p>
                            <a href="" class="card-link">Remove user</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <form class="bg-white" asp-controller="TaskManager" asp-action="EditTaskPost" asp-route-taskId="@ViewBag.ProjectTaskId" asp-antiforgery="true" method="post">
        <div class="mb-3">
            <label class=" form-label">ProjectId</label>
            <input class=" form-control" type="number" name="ProjectId" value="@ViewBag.ProjectTask.ProjectId"><br>
        </div>
        <div class="mb-1">
            <label class=" form-label">Name</label>
            <input class=" form-control" type="text" name="Name" value="@ViewBag.ProjectTask.Name"><br>
        </div>
        <div class="mb-1">
            <label class=" form-label">Description</label>
            <input class=" form-control" type="text" name="Description" value="@ViewBag.ProjectTask.Description"><br>
        </div>
        <div class="mb-1">
            <label class=" form-label">TaskTypeId</label>
            <input class=" form-control" type="number" name="TaskTypeId" value="@ViewBag.ProjectTask.TaskTypeId"><br>
        </div>
        <div class="mb-1">
            <label class=" form-label">TaskStateId</label>
            <input class=" form-control" type="number" name="TaskTypeId" value="@ViewBag.ProjectTask.TaskStateId"><br>
        </div>
        <div class="mb-1">
            <label class=" form-label">PriorityId</label>
            <input class=" form-control" type="number" name="PriorityId" value="@ViewBag.ProjectTask.PriorityId"><br>
        </div>
        <div class="mb-1">
            <label class=" form-label">TaskStartDate</label>
            <input class=" form-control" type="datetime" name="TaskStartDate" value="@ViewBag.ProjectTask.TaskStartDate"><br>
        </div>
        <div class="mb-1">
            <label class=" form-label">TaskEndDate</label>
            <input class=" form-control" type="datetime" name="TaskEndDate" value="@ViewBag.ProjectTask.TaskEndDate"><br>
        </div>
        <button type="submit" class="btn btn-lg btn-success btn-block mt-3">Modify<i class="fas fa-sign-in-alt"></i></button>
    </form>
</div>
