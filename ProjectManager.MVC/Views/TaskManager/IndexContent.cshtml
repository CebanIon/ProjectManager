@{
    Layout = null;
}
@using ProjectManager.Application.Projects.Commands.ModifyProject;
@model ModifyProjectCommand;
@if (ViewBag.SelectedProject != null)
{
    <div class="container" style="max-width: 100%!important;">
        <div class="card shadow">
            <div class="card-header justify-content-between">
                <div class="card-title">
                    Tasks
                </div>
                <div class="d-flex justify-content float-end">
                    <a onClick="viewUsersOfProject(@ViewBag.ProjectId)" class="btn btn-primary" tabindex="-1" role="button" aria-disabled="true">
                        <i class="bi bi-people mr-1"></i>
                        View users
                    </a>
                    <a onClick="viewCreateTask(@ViewBag.ProjectId)" class="btn btn-success ms-1" tabindex="-1" role="button" aria-disabled="true">
                        <i class="bi bi-plus-circle mr-1"></i>
                        Create task
                    </a>
                </div>
            </div>
            <div class="card-body">
                <table id="tasksByProject" class="table table-bordered table-hover w-100 mb-1" style="width:100%">
                </table>
            </div>
        </div>
    </div>
}