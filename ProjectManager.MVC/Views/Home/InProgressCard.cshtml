@{
    Layout = null;
}
<div class="card p-3 px-4 m-2 d-inline-block align-top border border-3 rounded shadow">
    <div class="card-body">
        <h5 class="card-title text-decoration-underline">Tasks in progress:</h5>
        @if (ViewBag.TasksInProgress != null)
        {
            @foreach (var task in ViewBag.TasksInProgress)
            {
                <p onclick="goToTaskFromDashboard(@task.Id)" class="">@task.Name</p>
            }
        }
        else
        {
            <p class="h6">No tasks in progress</p>
        }
    </div>
</div>
