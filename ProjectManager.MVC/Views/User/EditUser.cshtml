@{
    Layout = null;
}
@model ProjectManager.Application.Users.Queries.UpdateUser.UpdateUserQuery;
<div class="container">
    @if (ViewBag.Error != null)
    {
        @foreach (var error in ViewBag.Error)
        {
            <p class="text-danger">@error</p>
        }
    }
    @if (ViewBag.UserDetails != null)
    {
        <div class="form-check form-switch float-end">
            <input class="form-check-input" type="checkbox" onclick="editTogle()" role="switch" id="editCheckBox">
            <label class="form-check-label" for="flexSwitchCheckDefault">Edit</label>
        </div>
        <div class="mb-3">
            <label class="form-label">Projects</label>
            <div class="row">
                @foreach (var project in ViewBag.UserDetails.Projects)
                {
                    <div class="col-4 p-1">
                        <div class="card">
                            <div class="card-body">
                                <p class="h4 card-title">Project name : @project.Item2</p>
                                <button type="button" onclick="RemoveUserFromProject(@project.Item1, @ViewBag.userId)" class="visibleIfEditClass btn btn-primary">Remove project</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Tasks</label>
            <div class="row">
                @foreach (var projectTask in ViewBag.UserDetails.ProjectTasks)
                {
                    <div class="col-4 p-1">
                        <div class="card">
                            <div class="card-body">
                                <p class="h4 card-title">Task name : @projectTask.Item2.Item1</p>
                                <p class="h5 card-subtitle text-muted">Project : @projectTask.Item2.Item2</p>
                                <button type="button" onclick="RemoveUserFromTask(@ViewBag.userId,@projectTask.Item1)" class="visibleIfEditClass btn btn-primary">Remove task</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <form class="bg-white" asp-controller="User" asp-action="EditUserPost" asp-route-userId="@ViewBag.UserId" asp-antiforgery="true" method="post">
            <div class="mb-3">
                <label class=" form-label">UserName</label>
                <input class="writeIfEditClass form-control" type="text" asp-for="UserName" value="@ViewBag.UserDetails.UserName">
                <span class="text-danger" asp-validation-for="UserName"></span>
                <br>
            </div>
            <div class="mb-3">
                <label class=" form-label">FirstName</label>
                <input class="writeIfEditClass form-control" type="text" asp-for="FirstName" value="@ViewBag.UserDetails.FirstName">
                <span class="text-danger" asp-validation-for="FirstName"></span>
                <br>
            </div>
            <div class="mb-3">
                <label class=" form-label">LastName</label>
                <input class="writeIfEditClass form-control" type="text" asp-for="LastName" value="@ViewBag.UserDetails.LastName">
                <span class="text-danger" asp-validation-for="LastName"></span>
                <br>
            </div>
            <div class="mb-3">
                <label class=" form-label">Email</label>
                <input class="writeIfEditClass form-control" type="text" asp-for="Email" value="@ViewBag.UserDetails.Email">
                <span class="text-danger" asp-validation-for="Email"></span>
                <br>
            </div>
            <div class="mb-3">
                <label class=" form-label">IsEnabled</label>
                <select class="writeIfEditClass form-select" asp-for="IsEnabled">
                    @if (ViewBag.UserDetails.IsEnabled.ToString() == "True")
                    {
                        <option value="true" selected>True</option>
                        <option value="false">False</option>
                    }
                    else
                    {
                        <option value="true">True</option>
                        <option value="false" selected>False</option>
                    }
                </select>
                <span class="text-danger" asp-validation-for="IsEnabled"></span>
                <br>
            </div>
            <div class="mb-3">
                <label class=" form-label">Role</label>
                <select class="writeIfEditClass form-select" naasp-forme="RoleId">
                    @foreach (var role in ViewBag.Roles)
                    {
                        @if (int.Parse(ViewBag.UserDetails.RoleId.ToString()) == role.Id)
                        {
                            <option value="@role.Id" selected>@role.Name</option>
                        }
                        else
                        {
                            <option value="@role.Id">@role.Name</option>
                        }
                    }
                </select>
                <span class="text-danger" asp-validation-for="RoleId"></span>
                <br>
            </div>
            <button type="submit" class="visibleIfEditClass btn btn-lg btn-success btn-block mt-3">Modify<i class="fas fa-sign-in-alt"></i></button>
        </form>
    }
</div>
